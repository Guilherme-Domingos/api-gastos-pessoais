// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  nome     String
  email    String  @unique
  telefone String
  endereco String?
}

model Transaction {
  id        String   @id @default(uuid())
  data      DateTime
  remetente String
  categoria String
  valor     Float
  descricao String
  tipo      String
}
